
<section class=" ">

    <div class="login">
        <h1>Login to Web App</h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div method="post" action="index.html">
            <p> <%= f.text_field :email, autofocus: true, :required => true, :class => "form-control form-control-he", :placeholder => "Enter Email" %></p>
            <p> <%= f.password_field :password, autocomplete: "off" %></p>
            <p>
            <% if devise_mapping.rememberable? -%>
                <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                </div>
            <% end -%>
            </p>

            <p class="submit"> <%= f.submit "Log in" %></p>
        </div>
        <% end %>
    </div>

    <div class="login-help">
        <p>Forgot your password? <a href="index.html">Click here to reset it</a>.</p>
    </div>
</section>
